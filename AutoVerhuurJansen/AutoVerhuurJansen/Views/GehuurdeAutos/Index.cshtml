@model IEnumerable<AutoVerhuurJansen.Models.Verhuren>

@{
    ViewBag.Title = "Index";
}

<h2>De Gehuurde auto's</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.beginDatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eindDatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medewerkers.voornaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Voertuigen.merk)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Klanten.voornaam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.beginDatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eindDatum)
        </td>   
        <td>
            @Html.DisplayFor(modelItem => item.Medewerkers.voornaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Voertuigen.merk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Klanten.voornaam)
        </td>
    </tr>
}

</table>
